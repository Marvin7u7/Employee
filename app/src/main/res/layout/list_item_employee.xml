<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/margin_low"
    android:layout_marginBottom="@dimen/margin_low"
    android:layout_height="80dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_workposition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/work_position"

        android:textSize="@dimen/margin_high"/>

    <TextView
        android:id="@+id/namelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/full_names"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/margin_high"/>


    <TextView
        android:id="@+id/salarylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/salary"
        android:textAlignment="textEnd"
        android:textSize="@dimen/margin_high"/>






</LinearLayout>


</androidx.cardview.widget.CardView>